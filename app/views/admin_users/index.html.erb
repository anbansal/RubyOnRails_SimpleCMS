<% @page_title = "All Admin Users"%>
<%= link_to("Admin Area", admin_path, :class => 'back-link') %>
<div class="admin_users index">
  <h2>Admin Users</h2>
  <%= image_tag('plus_sign.png',:alt => '+',:size => '11x11') %>
  <%= link_to("Add New Admin user", new_admin_user_path, :class => 'action new') %>

  <table class="listing" summary="Admin_user list">
    <tr class="header">
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
    <tr>
      <td><%= admin_user.first_name %></td>
      <td><%= admin_user.last_name %></td>
      <td><%= admin_user.username %></td>
      <td><%= admin_user.email %></td>
      <td class="actions">
        <%= link_to("Show", admin_user_path(admin_user), :class => 'action show') %>
        <%= link_to("Edit", edit_admin_user_path(admin_user), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(admin_user), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
